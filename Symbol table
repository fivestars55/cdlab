#include <stdio.h>
#include <string.h>
struct Symbol {
    char name[20];
    char type[10];
    int address;
};
struct Symbol table[20];
int count = 0;
void insert() {
    printf("Enter variable name: ");
    scanf("%s", table[count].name);
    printf("Enter type (int/float/char): ");
    scanf("%s", table[count].type);
    printf("Enter address: ");
    scanf("%d", &table[count].address);
    count++;
    printf("Symbol inserted!\n");
}
void display() {
    printf("\nSymbol Table:\n");
    printf("Name\tType\tAddress\n");

    for (int i = 0; i < count; i++) {
        printf("%s\t%s\t%d\n", table[i].name, table[i].type, table[i].address);
    }
}
int main() {
    int choice;

    while (1) {
        printf("\n1. Insert\n2. Display\n3. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1: insert(); break;
            case 2: display(); break;
            case 3: return 0;
            default: printf("Invalid choice!\n");
        }
    }
}
