#include <stdio.h>
#include <ctype.h>

int main() {
    char e[50];

    printf("Enter expression: ");
    scanf("%s", e);

    printf("\nChar   Type    DataType     Address\n");

    for (int i = 0; e[i]; i++) {
        const char *type =
            isalpha(e[i]) ? "ID" :
            isdigit(e[i]) ? "NUM" : "OP";

        const char *dtype =
            isalpha(e[i]) ? "char(variable)" :
            isdigit(e[i]) ? "int(constant)" : "operator";

        printf("  %c     %-6s  %-13s  %p\n",
               e[i], type, dtype, &e[i]);
    }

    return 0;
}
